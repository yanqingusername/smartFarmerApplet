.font_input{
    margin-left:30rpx;
    font-family: "SHSCN_Medium";
    font-size: 32rpx;
    color: #333333;
}
.font_search{
    font-family: "SHSCN_Medium";
    font-size: 32rpx;
    color: #333333;
    margin-right: 30rpx;
    margin-left: auto;
}
.P1{
    height: 100rpx;
    width: 750rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 30rpx;
    background-color: #FFFFFF;
    flex-wrap: wrap;
}
.P2{
    display: flex;
    width: 750rpx;
    height: 100rpx;
    text-align: left;
    align-items: center;
    box-shadow: 0 1px 0 0 rgba(242,242,242,1);
}
.bt_operation{
    width: 165rpx;
    height: 60rpx;
    opacity: 1.0;
    border-radius: 6rpx;
    background-color: #F8F8F8;
    border: 2rpx solid RGB(0,0,0, 0.08);
    margin-right: 10rpx;
    color: #444444;
    font-size: 26rpx;
    font-family: "SHSCN_Regular";
    display: flex;
    align-items: center;
    justify-content: center;
}
.bt_operation_select{
    background-color: #58A4FD;
    opacity: 1.0;
    border: 0rpx solid RGB(0,0,0, 0.08);
    color: #FEFEFE;
    font-family: "SHSCN_Regular";
    font-size: 26rpx;
}
/* 详情 */
.P4{
    width: 750rpx;
    min-height: 180rpx;
    background-color: #FFFFFF;
    opacity: 1.0;
    margin-top: 20rpx;
    padding: 10rpx 30rpx;
}
.P5{
    padding-top: 46rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.font_info{
    font-family: "SHSCN_Regular";
    font-size: 30rpx;
    color: #2B2B2B;
    line-height: 50rpx;
}
.worker_head{
    /* width: 64rpx;
