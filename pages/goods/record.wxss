    width: 80rpx;
    height: 80rpx;
    align-self: center;
}
.P6{
    margin-left: 20rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap:wrap;
}
.font_name{
    font-family: "SHSCN_Regular";
    font-size: 32rpx;
    color: #333333;
    width: 100%;
}
.P7{
    width: 100%;
    margin-top: 12rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.font_time{
    font-family: "SHSCN_Regular";
