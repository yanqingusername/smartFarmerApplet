<view class="page">
    <view class="search_border">
        <view class='search'>
            <view class="search_left">
                <image class="right_arrow" src="/image/icon/icon_10_08_03.png" />
                <input id="search_checked" style="width:80%;" type='text' placeholder='搜索审批人' placeholder-style="color: #999999;" confirm-type='search' value="{{searchText}}" bindinput='searchChangeHandle' placeholder-class="phcolor" focus="{{isfocus}}"></input>
                <view class="weui-icon-clear" wx:if="{{searchText}}" bindtap="clearSearchHandle">
                    <image style="width:28rpx;height:28rpx;" src="/image/icon/icon_clear.png"></image>
                </view>
            </view>
        </view>

        <view class="select_view" wx:if="{{selectPersionList.length > 0}}">
            <view class="select_1">已选人员</view>
            <view class="new_view" >
                <block wx:for="{{selectPersionList}}" wx:key="index">
                    <view class="select_2">
                        <view class="select_2_1">{{item.name}}</view>
                        <image class="select_2_2" src="/image/icon/icon_clear.png" bind:tap="clearClick" data-id="{{item.id}}"></image>
                    </view>
                </block>
            </view>
        </view>
    </view>

      <view class="homeindex_4_1_center">
                <block wx:for="{{employeesList}}" wx:key="index">
                    <view class="homeindex_4_1_item" bind:tap="clickSelectHandler" data-id="{{item.id}}" data-name="{{item.name}}">
                        <view class="v1_left">
                            <view class="homeindex_4_1_item_r_title">{{item.job_number}}</view>
                            <view class="homeindex_4_1_item_l_2_title">{{item.name}}</view>
                        </view>
                        <view class="v1_right">
                            <view class="homeindex_4_1_item_l">
                                <view class="homeindex_4_1_item_l_1">
                                    <image class='homeindex_4_1_item_l_h' src='{{item.head_url}}'></image>
                                </view>
                                <view class="homeindex_4_1_item_l_2">
                                
                                <view class="homeindex_4_1_item_l_2_time">{{item.role_name}}</view>
                                </view>
                            </view>

                            <view class="homeindex_4_1_item_r" >
                                <view style="position:relative;display: flex;align-items: center;justify-content: center;flex-direction: column;padding: 20rpx 30rpx 30rpx 30rpx;">
                                    <image style="width:40rpx;height:40rpx;" src="{{item.isSelect ? '/image/icon/icon_10_08_23.png' : '/image/icon/icon_10_08_22.png'}}"></image>
                                </view>
                            </view>

                        </view>
                    </view>
                </block>
            </view>

        <block wx:if="{{employeesList.length == 0 && isSearch}}">
                <view class="homeindex_4_1_top_2_t" style="display: flex;align-items: center;justify-content: center;padding: 100rpx;">暂无数据</view>
            </block>

      <view style="height:50rpx;"></view>
</view>