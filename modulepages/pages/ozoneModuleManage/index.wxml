<view class="page">
     <view class="subject_view" bind:tap="bindAddEquipment">
        <view class="subject_view_white"><image  class="icon_add" src="/image/icon/icon_2023_01_06_12.png"/>新增设备信息</view>
      </view>
      <view class="homeindex_4_1_center">
                <block wx:for="{{deviceinfoList}}" wx:key="index">
                    <view class="homeindex_4_1_item">
                        <view class="homeindex_4_1_item_top">
                            <view class="homeindex_4_1_item_r_title">{{item.sn}}</view>
                            <view class="homeindex_4_1_item_l_2_title">{{item.name}}</view>
                        </view>
                        <view class="homeindex_4_1_item_center">
                            <view class="homeindex_4_1_item_l">
                                
                                <view class="homeindex_4_1_item_l_2" style="margin-left: 0rpx;">
                                    <view class="v2_1_position">设备位置：{{item.address}}</view>
                                    <view class="v2_1_position" style="margin-top: 10rpx;">设备管理员：{{item.controller}}</view>
                                    <view class="v2_1_position" style="margin-top: 10rpx;">审批人：{{item.reviewer}}</view>
                                </view>
                            </view>
                             <view class="homeindex_4_1_item_r">
                                <view style="position:relative;display: flex;align-items: center;justify-content: center;flex-direction: column;padding: 20rpx 30rpx 30rpx 30rpx;" catch:tap="bindEditCus" data-uid="{{item.id}}">
                                <image style="width:40rpx;height:40rpx;" src="/image/icon/icon_2023_01_06_18.png"></image>
                                <view style="font-size: 24rpx;color: #999999;margin-top: 6rpx;">编辑</view>
                                </view>
                            </view>

                        </view>
                    </view>
                </block>
            </view>

      <view style="height:50rpx;"></view>
</view>