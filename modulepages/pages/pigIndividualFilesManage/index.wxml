<view class="page">
    <view class="subject_view" bind:tap="bindPigIndividualFilesAdd">
        <view class="subject_view_white"><image  class="icon_add" src="/image/icon/icon_2023_01_06_12.png"/>新增猪只信息</view>
    </view>

      <view class="v2_1" wx:for="{{deviceinfoList}}" wx:key="index">
            <view class="v2_1_top">
                <view class="v2_1_top_1"><image class='v2_1_top_1_img' src="/image/icon/icon_2023_02_14_10.png"></image>{{item.label_id}}</view>
                <view class="v2_1_top_2" style="color: {{item.status == '101' ? '#FF2C2B' : '#666666'}};">{{item.status == '101' ? '离场' : '在场'}}</view>
            </view>
            <view class="v2_1_line"></view>
            <view class="v1_right">
                <view class="homeindex_4_1_item_l">
                    <!-- <view class="v2_1_position_1"><image class='v2_1_position_img' src='/image/icon/icon_2023_01_06_25.png'></image>品种：{{item.door}}{{item.dorm}}</view>
                    <view class="v2_1_position_2"><image class='v2_1_position_img' src='/image/icon/icon_2023_01_06_24.png'></image>性别：{{item.check_in_time}}</view> -->
                    <view class="v2_1_position_1">品种：{{item.door}}{{item.dorm}}</view>
                    <view class="v2_1_position_2">性别：{{item.check_in_time}}</view>
                </view>
                <view class="homeindex_4_1_item_r" wx:if="{{item.role != 0}}">
                    <view style="position:relative;display: flex;align-items: center;justify-content: center;flex-direction: column;padding: 30rpx 30rpx 30rpx 30rpx;" catch:tap="editPigIndividualFilesAdd" data-id="{{item.label_id}}">
                        <image style="width:40rpx;height:40rpx;" src="/image/icon/icon_2023_01_06_18.png"></image>
                        <view style="font-size: 24rpx;color: #999999;margin-top: 6rpx;">编辑</view>
                    </view>
                </view>
            </view>
		</view>

        <block wx:if="{{deviceinfoList.length==0}}">
            <view class="homeindex_4_1_top_2_t" style="display: flex;align-items: center;justify-content: center;padding: 100rpx;">暂无数据</view>
        </block>

      <view style="height:50rpx;"></view>
</view>